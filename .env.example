# Authentication Configuration
# Set to 'keycloak' or 'local' to force a specific provider
# If not set, the app will auto-detect based on Keycloak availability
VITE_AUTH_PROVIDER=keycloak

# Keycloak Configuration
VITE_KEYCLOAK_ENABLED=true
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=GenEdu
VITE_KEYCLOAK_CLIENT_ID=genedu-frontend

# Local Auth Configuration
VITE_LOCAL_AUTH_ENABLED=true
VITE_API_URL=http://localhost:3000/api

# Development flags
VITE_DEBUG_AUTH=false
